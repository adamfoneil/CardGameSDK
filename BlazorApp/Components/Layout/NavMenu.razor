@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Cards</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <IconNavLink Href="/" Icon="home" Text="Home" />       

        <AuthorizeView Roles="Developers">
            <Authorized>
                <IconNavLink Href="/Hearts/DevGame" Text="Hearts - DevMode" Icon="construction" />
            </Authorized>
        </AuthorizeView>

        <AuthorizeView>
            <Authorized>
                <IconNavLink Href="/Ready" Text="Ready" Icon="not_started" />
                <IconNavLink Href="/Account/Manage" Text="@context.User.Identity?.Name" Icon="account_circle" />
                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link">
                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <IconNavLink Href="/Account/Register" Text="Register" Icon="rocket" />
                <IconNavLink Href="/Account/Login" Text="Login" Icon="login" />
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}


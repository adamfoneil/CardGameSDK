<div class="py-4 px-2 border rounded-1 d-flex align-items-center me-2">
	<h2 class="my-0 me-1" style="color:@Color">@DisplayRank</h2>
	<div><img src="@SuitImage" style="width:40px" /></div>
</div>

@code {
	[Parameter, EditorRequired]
	public PlayingCard PlayingCard { get; set; } = default!;

	private string DisplayRank => PlayingCard.DisplayRank.ToString().Substring(0, 1);
	private string Display => DisplayRank + PlayingCard.Suit.Name.Substring(0, 1);

	private string SuitImage => $"img/Suits/" + (
		PlayingCard.Suit.Equals(ClassicSuits.Spades) ? "spades.svg" :
		PlayingCard.Suit.Equals(ClassicSuits.Hearts) ? "hearts.svg" :
		PlayingCard.Suit.Equals(ClassicSuits.Diamonds) ? "diamonds.svg" :
		"clubs.svg");

	private string Color =>		
		PlayingCard.Suit.Equals(ClassicSuits.Hearts) ? "red" :
		PlayingCard.Suit.Equals(ClassicSuits.Diamonds) ? "red" :
		"auto";
}
